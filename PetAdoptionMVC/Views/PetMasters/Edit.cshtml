@model PetAdoptionMVC.Models.PetMaster
@{
    ViewData["Title"] = "Edit Pet";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit Pet</h1>
<h4>Pet Master</h4>
<hr />

<form asp-action="Edit" method="post" enctype="multipart/form-data">

    <!-- IMPORTANT: Hidden Keys -->
    <input type="hidden" asp-for="PetId" />
    <input type="hidden" asp-for="PetImage" />

    <div class="form-group">
        <label asp-for="PetName" class="control-label"></label>
        <input asp-for="PetName" class="form-control" />
        <span asp-validation-for="PetName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PetCategoryId" class="control-label"></label>
        <select asp-for="PetCategoryId" class="form-control" asp-items="ViewBag.PetCategoryId"></select>
        <span asp-validation-for="PetCategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="control-label"></label>
        <select asp-for="Gender" class="form-control" asp-items="ViewBag.GenderOptions"></select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control" asp-items="ViewBag.StatusOptions"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <!-- CURRENT IMAGE SHOW -->
    <div class="form-group">
        <label>Current Image</label><br />
        @if (Model.PetImage != null)
        {
            <img src="~/images/@Model.PetImage" width="180" style="border-radius:10px;" />
        }
        else
        {
            <p>No Image</p>
        }
    </div>

    <!-- NEW IMAGE UPLOAD -->
    <div class="form-group">
        <label asp-for="ImageFile" class="control-label"></label>
        <input type="file" asp-for="ImageFile" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a href="@Url.Action("Index", "PetMasters")" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}