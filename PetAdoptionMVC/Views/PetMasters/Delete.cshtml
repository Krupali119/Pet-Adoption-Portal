    @model PetAdoptionMVC.Models.PetMaster

    @{
        ViewData["Title"] = "Delete Pet";
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }

    @if (Model == null)
    {
        <div class="alert alert-warning text-center my-4">
            Pet not found.
        </div>
    }
    else
    {
        <h1 class="text-danger text-center">Delete Pet</h1>

        <h4 class="text-center">Are you sure you want to delete this pet?</h4>
        <hr />

        <div class="card my-4 shadow-sm">
            <div class="card-body">
                <h3 class="card-title text-primary">@Model.PetName</h3>
                <p><strong>Category:</strong> @Model.PetCategoryMaster?.CategoryName</p>
                <p><strong>Gender:</strong> @Model.Gender</p>
                <p><strong>Status:</strong> @Model.Status</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <div>
                    @if (!string.IsNullOrEmpty(Model.PetImage))
                    {
                        <img src="@Url.Content("~/images/" + Model.PetImage)" alt="Pet Image" class="img-thumbnail" style="max-width: 150px;" />
                    }
                    else
                    {
                        <span class="text-muted">No Image Available</span>
                    }
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="PetId" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger btn-submit">Delete</button>
                <a asp-action="Index" asp-controller="PetMasters" class="btn btn-secondary btn-submit">Cancel</a>
            </div>
        </form>
    }

    <style>
        h1.text-danger {
            font-size: 2rem;
            font-weight: bold;
        }

        h4.text-center {
            font-size: 1.2rem;
            color: #666;
        }

        .card-body {
            background-color: #f9f9f9;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #007bff;
        }

        .card-body p {
            font-size: 1rem;
            color: #333;
        }

        .card-body img {
            border: 2px solid #ddd;
            border-radius: 5px;
        }

        .text-muted {
            color: #888;
        }

        .d-flex {
            display: flex;
            justify-content: space-between;
        }

        .btn-submit {
            padding: 12px;
            font-size: 1.1rem;
            font-weight: bold;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-danger {
            background: #e74c3c;
        }

            .btn-danger:hover {
                background: #c0392b;
            }

        .btn-secondary {
            background: #f1f1f1;
            color: #333;
        }

            .btn-secondary:hover {
                background: #ddd;
            }
    </style>
