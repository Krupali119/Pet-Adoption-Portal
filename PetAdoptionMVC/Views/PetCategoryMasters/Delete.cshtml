@model PetAdoptionMVC.Models.PetCategoryMaster

@{
    ViewData["Title"] = "Delete Pet Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-danger text-center">Delete Pet Category</h1>

<h3 class="text-center">Are you sure you want to delete this pet category?</h3>

<div class="card my-4 shadow-sm">
    <div class="card-body">
        <h4 class="card-title text-primary">Pet Category Details</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    <input type="hidden" asp-for="CategoryId" />

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "PetCategoryMasters")" class="btn btn-secondary">Back to List</a>
    </div>
</form>

