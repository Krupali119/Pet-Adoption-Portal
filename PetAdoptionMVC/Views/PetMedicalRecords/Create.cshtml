@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model PetAdoptionMVC.Models.PetMedicalRecords

<div class="form-container">
    <h1>Add Medical Record</h1>
    <h4>Fill out the form below to add a medical record</h4>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="PetId">Select Pet</label>
            <select id="PetId" name="PetId" class="form-control" required>
                <option value="">-- Select Pet --</option>
                @foreach (var pet in ViewBag.Pets)
                {
                    <option value="@pet.PetId">@pet.PetName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="VaccinationDetails">Vaccination Details</label>
            <input type="text" id="VaccinationDetails" name="VaccinationDetails" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="HealthHistory">Health History</label>
            <textarea id="HealthHistory" name="HealthHistory" class="form-control" required></textarea>
        </div>
        <button type="submit" class="btn-submit">Save</button>
    </form>

    <div class="back-link">
        <a href="/PetMedicalRecords/Index">Back to Details</a>
    </div>
</div>
<style>
    /* Form Styling */
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        background: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .form-container h1 {
            text-align: center;
            color: #4caf50;
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .form-container h4 {
            text-align: center;
            color: #666;
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-size: 1rem;
            color: #333;
            font-weight: 600;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 12px;
            font-size: 1rem;
            color: #333;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: all 0.3s;
        }

            .form-group input:focus,
            .form-group select:focus,
            .form-group textarea:focus {
                border-color: #4caf50;
                outline: none;
                box-shadow: 0 0 5px rgba(76, 175, 80, 0.5);
            }

    .btn-submit {
        display: block;
        width: 100%;
        padding: 12px;
        font-size: 1.1rem;
        font-weight: bold;
        color: white;
        background: #4caf50;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-submit:hover {
            background: #388e3c;
        }

    .back-link {
        text-align: center;
        margin-top: 20px;
        font-size: 1rem;
        color: #4caf50;
    }

        .back-link a {
            text-decoration: none;
            color: #4caf50;
        }

            .back-link a:hover {
                text-decoration: underline;
            }
</style>