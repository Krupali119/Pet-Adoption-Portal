@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model PetAdoptionMVC.Models.PetMedicalRecords

@{
    ViewData["Title"] = "Delete Medical Record";
}

<div class="form-container">
    <h1>Delete Medical Record</h1>
    <p>Are you sure you want to delete the medical record for <strong>@Model.PetMaster.PetName</strong>?</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.MedicalRecordId" />
        <button type="submit" class="btn-submit btn-danger">Yes, Delete</button>
        <a href="@Url.Action("Index", "PetMedicalRecords")" class="btn-submit btn-secondary">Cancel</a>
    </form>
</div>

<style>
    /* Form Styling */
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        background: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-container h1 {
        text-align: center;
        color: #4caf50;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .form-container p {
        text-align: center;
        color: #666;
        font-size: 1.2rem;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-size: 1rem;
            color: #333;
            font-weight: 600;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 12px;
            font-size: 1rem;
            color: #333;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: all 0.3s;
        }

            .form-group input:focus,
            .form-group select:focus,
            .form-group textarea:focus {
                border-color: #4caf50;
                outline: none;
                box-shadow: 0 0 5px rgba(76, 175, 80, 0.5);
            }

    .btn-submit {
        display: inline-block;
        width: auto;
        padding: 12px;
        font-size: 1.1rem;
        font-weight: bold;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s;
        text-align: center;
    }

        .btn-submit:hover {
            opacity: 0.8;
        }

    .btn-danger {
        background: #f44336;
    }

        .btn-danger:hover {
            background: #d32f2f;
        }

    .btn-secondary {
        background: #9e9e9e;
    }

        .btn-secondary:hover {
            background: #757575;
        }
</style>
