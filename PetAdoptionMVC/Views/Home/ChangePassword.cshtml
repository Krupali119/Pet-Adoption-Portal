@model PetAdoptionMVC.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h2 class="text-center mb-4">
    <i class="fas fa-paw"></i> Update Your Password
</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i> @ViewBag.Message
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i> @ViewBag.ErrorMessage
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-success text-white text-center">
        <h5 class="mb-0">
            <i class="fas fa-key"></i> Keep Your Account Secure
        </h5>
    </div>
    <div class="card-body bg-light">
        <p class="text-muted text-center mb-4">
            Update your password to continue your journey of helping pets find loving homes!
        </p>
        <form asp-action="ChangePassword" method="post" class="p-4 border rounded">
            <div class="form-group mb-4">
                <label asp-for="CurrentPassword" class="control-label fw-bold">
                    <i class="fas fa-lock"></i> Current Password
                </label>
                <input asp-for="CurrentPassword" class="form-control border-2 form-control-md" type="password" placeholder="Enter current password" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="NewPassword" class="control-label fw-bold">
                    <i class="fas fa-lock-open"></i> New Password
                </label>
                <input asp-for="NewPassword" class="form-control border-2 form-control-md" type="password" placeholder="Enter new password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="control-label fw-bold">
                    <i class="fas fa-check"></i> Confirm Password
                </label>
                <input asp-for="ConfirmPassword" class="form-control border-2 form-control-md" type="password" placeholder="Confirm new password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success w-100">
                <i class="fas fa-paw"></i> Save Password
            </button>
        </form>
    </div>
    <div class="card-footer bg-light text-center">
        <small class="text-muted">
            <i class="fas fa-heart"></i> Your dedication to helping animals is amazing! Stay secure!
        </small>
    </div>
</div>


