@model PetAdoptionMVC.Models.FeedbackMaster

@{
    ViewData["Title"] = "Create Feedback";
}

<h1>Create Feedback</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Feedback" class="control-label"></label>
        <input asp-for="Feedback" class="form-control" />
        <span asp-validation-for="Feedback" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating" class="control-label"></label>
        <select asp-for="Rating" class="form-control">
            <option value="">Select Rating</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserId" class="control-label">User</label>
        <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
