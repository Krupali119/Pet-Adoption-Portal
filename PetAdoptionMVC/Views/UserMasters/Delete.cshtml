@model PetAdoptionMVC.Models.UserMaster

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-danger text-center">Delete User</h2>

<h5 class="text-center">Are you sure you want to delete this user?</h5>
<hr />

<div class="card shadow-sm">
    <div class="card-body">
        <p><strong>Name:</strong> @Model.FullName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Contact:</strong> @Model.ContactNo</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    <input type="hidden" asp-for="UserId" />

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-danger">
            Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            Cancel
        </a>
    </div>
</form>
