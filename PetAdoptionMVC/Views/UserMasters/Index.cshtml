@model IEnumerable<PetAdoptionMVC.Models.UserMaster>

@{
    ViewData["Title"] = "Users Management";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    :root {
        --bg: #f6f0e8;
        --white: #ffffff;
        --primary: #0B3B2E;
        --primary-light: #2F6F57;
        --accent: #D4AF37;
        --text: #2e3d2f;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background-color: var(--bg);
        color: var(--text);
        margin: 0;
        padding: 0;
    }

    /* Card styling */
    .card {
        background-color: var(--white);
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.08);
        transition: 0.3s;
        width: 95%;
        max-width: 1200px;
        margin: 40px auto;
        display: flex;
        flex-direction: column;
        overflow-x: auto;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(0,0,0,0.12);
        }

    .card-header {
        background: linear-gradient(90deg, var(--primary-light), var(--primary));
        color: var(--white);
        padding: 20px;
        border-radius: 12px 12px 0 0;
        text-align: center;
    }

        .card-header h2 {
            margin: 0;
            font-size: 1.8rem;
            font-weight: 700;
        }

        .card-header p {
            margin: 5px 0 0 0;
            font-size: 1rem;
            color: #d9d9d9;
        }

    /* Table styling */
    .table-container {
        overflow-x: auto;
        margin-top: 15px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        table-layout: auto;
    }

        .table th, .table td {
            padding: 12px 10px;
            border: 1px solid #ddd;
            text-align: left;
            word-wrap: break-word;
        }

        .table th {
            background-color: var(--primary-light);
            color: var(--white);
            font-weight: 600;
        }

        .table tbody tr:hover {
            background-color: #f1f7f3;
            transition: 0.3s;
        }

    /* Buttons */
    .btn {
        padding: 8px 14px;
        border-radius: 30px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: 0.3s;
        color: var(--white);
    }

    .btn-danger {
        background: #f44336;
    }

        .btn-danger:hover {
            background: #d32f2f;
        }

</style>

<div class="card">
    <div class="card-header">
        <h2>Users Management</h2>
        <p>Manage and view registered users</p>
    </div>

    <div class="card-body">
        <div class="table-container">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                        <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                        @* <th>@Html.DisplayNameFor(model => model.First().Password)</th> *@
                        <!-- Password hidden -->
                        <th style="display:none;">@Html.DisplayNameFor(model => model.First().Password)</th>
                        <th>@Html.DisplayNameFor(model => model.First().ContactNo)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            @* <td>@Html.DisplayFor(modelItem => item.Password)</td> *@
                            <!-- Password hidden -->
                            <td style="display:none;">@Html.DisplayFor(modelItem => item.Password)</td>
                            <td>@Html.DisplayFor(modelItem => item.ContactNo)</td>
                            <td class="text-center">
                                <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>