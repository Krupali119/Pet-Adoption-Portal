

@model PetAdoptionMVC.Models.UserMaster
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet Adoption Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #f6f0e8, #e6dacb);
            color: #2e3d2f;
        }

        .main-container {
            display: flex;
            width: 90%;
            max-width: 1100px;
            border-radius: 18px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            background: white;
        }

        /* LEFT SECTION - Branding & Image */
        .left-section {
            flex: 1;
            padding: 3rem 2rem;
            background: linear-gradient(180deg, #2e4d38, #1b3324);
            color: #fff8e1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

            .left-section h2 {
                font-size: 2.2rem;
                margin-bottom: 1rem;
                color: #ffebc2;
                font-weight: bold;
            }

            .left-section p {
                max-width: 300px;
                font-size: 1.1rem;
                color: #f8e7c6;
            }

            .left-section img {
                width: 70%;
                margin-top: 2rem;
                border-radius: 15px;
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            }

        /* RIGHT SECTION - Form */
        .right-section {
            flex: 1;
            padding: 2.5rem;
            background-color: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-card {
            width: 100%;
            max-width: 420px;
        }

            .form-card h2 {
                text-align: center;
                font-size: 2rem;
                font-weight: bold;
                color: #2e4d38;
                margin-bottom: 2rem;
            }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="number"] {
            width: 100%;
            padding: 12px 18px;
            margin-bottom: 1rem;
            font-size: 1rem;
            border-radius: 30px;
            border: 1px solid #ccc;
            background-color: #fafafa;
            transition: 0.3s ease;
        }

        input:focus {
            border-color: #2e4d38;
            box-shadow: 0 0 6px rgba(46, 77, 56, 0.4);
            outline: none;
        }

        button[type="submit"] {
            width: 100%;
            padding: 12px 20px;
            border: none;
            border-radius: 30px;
            background: linear-gradient(90deg, #c9a66b, #b18a54);
            color: white;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s ease;
            margin-top: 10px;
        }

            button[type="submit"]:hover {
                background: linear-gradient(90deg, #b18a54, #a0793d);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0,0,0,0.2);
            }

        .text-link {
            text-align: center;
            margin-top: 1rem;
        }

            .text-link a {
                color: #1f4c35;
                font-weight: bold;
                text-decoration: none;
                transition: 0.2s;
            }

                .text-link a:hover {
                    text-decoration: underline;
                    color: #b08953;
                }

        .card-footer p {
            text-align: center;
            margin-top: 2rem;
            font-style: italic;
            color: #666;
        }
    </style>
</head>
<body>

    <div class="main-container">

        <!-- LEFT SECTION -->
        <div class="left-section">
            <h2>🐾 Welcome to Pet Adoption</h2>
            <p>Join our loving community and give a pet a forever home.</p>
            <img src="/images/fg.jpg" alt="Pet Image">
        </div>

        <!-- RIGHT SECTION -->
        <div class="right-section">
            <div class="form-card">
                <h2>Register</h2>

                <form asp-action="Register" method="post">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <!-- Full Name -->
                    <label asp-for="FullName">Full Name</label>
                    <input asp-for="FullName" type="text" placeholder="Your full name" required />
                    <span asp-validation-for="FullName" class="text-danger"></span>

                    <!-- Email -->
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="email" placeholder="Enter your email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <!-- Password -->
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" placeholder="Create password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <!-- Contact Number -->
                    <label asp-for="ContactNo">Contact Number</label>
                    <input asp-for="ContactNo" type="number" placeholder="Your contact number" required />
                    <span asp-validation-for="ContactNo" class="text-danger"></span>

                    <!-- Submit -->
                    <button type="submit">Let's Get Started</button>

                    <!-- Already Member -->
                    <div class="text-link">
                        <p>Already a member? <a asp-area="" asp-controller="Home" asp-action="Login">Sign In</a></p>
                    </div>

                    <div class="card-footer">
                        <p>🐶 Adopt, Don’t Shop! 🐱</p>
                    </div>

                </form>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>