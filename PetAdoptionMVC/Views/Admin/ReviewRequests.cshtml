@{
    ViewData["Title"] = "ReviewRequests";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    :root {
        --bg: #f6f0e8;
        --white: #ffffff;
        --primary: #0B3B2E;
        --primary-light: #2F6F57;
        --accent: #D4AF37;
        --text: #2e3d2f;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background-color: var(--bg);
        color: var(--text);
        margin: 0;
        padding: 0;
    }

    /* Card styling */
    .card {
        background-color: var(--white);
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.08);
        transition: 0.3s;
        width: 100%;
        max-width: 1200px;
        margin: 40px auto;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(0,0,0,0.12);
        }

    .card-header {
        background: linear-gradient(90deg, var(--primary-light), var(--primary));
        color: var(--white);
        padding: 20px;
        border-radius: 12px 12px 0 0;
        text-align: center;
    }

        .card-header h2 {
            margin: 0;
            font-size: 1.8rem;
            font-weight: 700;
        }

        .card-header p {
            margin: 5px 0 0;
            font-size: 1rem;
            color: #d9d9d9;
        }

    /* Table Styling */
    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 12px 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: var(--primary-light);
            color: var(--white);
            font-weight: 600;
        }

        .table td {
            color: #555;
        }

        .table tbody tr:hover {
            background-color: #f1f7f3;
            transition: 0.3s;
        }

    /* Buttons */
    .btn {
        padding: 8px 14px;
        border-radius: 30px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: 0.3s;
        color: var(--white);
    }

    .btn-success {
        background: var(--primary);
    }

        .btn-success:hover {
            background: var(--primary-light);
        }

    .btn-danger {
        background: #f44336;
    }

        .btn-danger:hover {
            background: #d32f2f;
        }

    .table-responsive {
        overflow-x: auto;
    }
</style>


<div class="card">
    <div class="card-header">
        <h2>Adoption Requests</h2>
        <p>Review & manage adoption request submissions</p>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Request ID</th>
                        <th>Pet Name</th>
                        <th>User</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td>@request.RequestId</td>
                            <td>@request.Pet.PetName</td>
                            <td>@request.User.FullName</td>
                            <td>@request.Status</td>

                            <td class="text-center">
                                <form asp-action="ApproveAdoptionRequest" method="post" style="display:inline-block;">
                                    <input type="hidden" name="requestId" value="@request.RequestId" />
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                </form>

                                <form asp-action="RejectAdoptionRequest" method="post" style="display:inline-block;">
                                    <input type="hidden" name="requestId" value="@request.RequestId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>